			<%= render "/users/pet_form", :f => user  %>
		<% end %>
	</div>
	
  
  <div class="field">
    <%= f.label :reminder %><br />
    <%= f.datetime_select :reminder %>
  </div>
  <div class="field">
    <%= f.label :reason %><br />
    <%= f.text_area :reason %>
  </div>
  <div class="field">
    <%= f.label :doctor_id %><br />
		 <%= f.select :doctor_id, @doctors , {:prompt => 'Select Doctor'} %>
  </div>
