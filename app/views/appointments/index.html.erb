<h1>Listing appointments</h1>

<table>
  <tr>
    <th>Date of visit</th>
    <th>Pet</th>
    <th>User</th>
    <th>Minder</th>
    <th>Reason</th>
    <th>Doctor</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @appointments.each do |appointment| %>
  <tr>
    <td><%= appointment.date_of_visit %></td>
    <td><%= appointment.user.pet.try(:name) %></td>
    <td><%= appointment.user.try(:name) %></td>
    <td><%= appointment.reminder %></td>
    <td><%= appointment.reason %></td>
    <td><%= appointment.doctor.try(:name) %></td>
		 <td><%= link_to 'Show', appointment %></td>
		<% unless current_user.customer? %>
   
    <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
    <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
  </tr>
<% end %>
</table>

<br />
<% unless current_user.customer? %>
<%= link_to 'New Appointment', new_appointment_path %>
<% end %>